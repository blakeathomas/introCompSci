package javaGraphics;

import java.applet.Applet;
import java.awt.Color;
import java.awt.Font;
import java.awt.Graphics;

import javax.swing.JFrame;

public class PracticalThree extends Applet{
    private static final long serialVersionUID = 1L;
    public static final int WIDTH = 1200;
    public static final int HEIGHT = 900;
    

    public static void main(String[] args) {
        PracticalThree test = new PracticalThree();
        test.setSize(WIDTH, HEIGHT);
        test.setVisible(true);
        
    }
    
    public void paint(Graphics g){
    	setBackground(new Color(0xAFD1D8));
    	g.setColor(new Color(0xAF0000));
        g.fillOval(50, 50, 69, 69);
        g.setColor(new Color(0x00D100));
        g.fillOval(125, 50, 82, 82);
        g.setColor(new Color(0x0000D8));
        g.fillOval(215, 50, 85, 85);
        /*g.setColor(new Color(0xff00ff));
        g.fillOval(180, 180, 10, 20);
        g.drawString("test", 100, 100);
        g.drawOval(500, 300, 200, 100);
        
        g.setFont(new Font("TimesRoman", Font.BOLD, 150)); 
        g.drawString("TEST", 300, 200);
        g.drawRect(700, 500, 200, 100);
        */
    }
    
}